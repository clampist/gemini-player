{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "types": ["node", "@playwright/test"],
    "resolveJsonModule": true,
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "dist"
  },
  "include": [
    "playwright.config.ts",
    "tests/**/*"
  ]
}

